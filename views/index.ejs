<section id="contact" class="contact-section">
  <div class="contact-container">
    <div class="contact-left">
      <h2>Contact Us</h2>
      <p>Have a project or question? Fill out the form and we'll get back to you within 24 hours.</p>

      <div class="contact-info">
        <p><strong>Email:</strong> info@example.com</p>
        <p><strong>Phone:</strong> +1 234 567 890</p>
        <p><strong>Address:</strong> 123 Local St, Hometown</p>
      </div>
    </div>

    <div class="contact-right">
      <form id="contactForm">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>

        <label for="service">Service</label>
        <select id="service" name="service">
          <option value="home-repairs">Home Repairs</option>
          <option value="installations">Installations</option>
          <option value="cleaning">Cleaning & Upkeep</option>
          <option value="custom">Custom Projects</option>
        </select>

        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>

        <button type="submit" class="btn">Send Message</button>
        <div id="formStatus" class="form-status" aria-live="polite"></div>
      </form>
    </div>
  </div>
</section>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin - Submissions</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .admin-wrap{max-width:1100px;margin:36px auto;padding:20px}
    table{width:100%;border-collapse:collapse;margin-top:12px}
    th,td{padding:8px 10px;border:1px solid #eee;text-align:left}
    .meta{font-size:13px;color:#666}
    .actions{display:flex;gap:8px}
    .danger{background:#ff6b6b;color:#fff;border:0;padding:8px 10px;border-radius:6px}
    .muted{background:#f3f3f3;border:0;padding:8px 10px;border-radius:6px}
  </style>
</head>
<body>
  <div class="admin-wrap">
    <h1>Admin â€” Submissions</h1>
    <div style="display:flex;gap:10px;margin-top:8px;align-items:center">
      <form method="get" action="/admin/download"><button class="muted">Download data.json</button></form>
      <form method="post" action="/admin/clear"><input type="hidden" name="which" value="all"><button class="danger">Clear All</button></form>
    </div>

    <section style="margin-top:24px">
      <h2>Contact submissions</h2>
      <p class="meta"><%= contacts.length %> entries</p>
      <table>
        <thead><tr><th>Name</th><th>Email/Contact</th><th>Message</th><th>Created</th></tr></thead>
        <tbody>
        <% contacts.forEach(c=>{ %>
          <tr>
            <td><%= c.name || '-' %></td>
            <td><%= c.email || c.contact || '-' %></td>
            <td><%= c.message || '-' %></td>
            <td><%= c.createdAt || '-' %></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </section>

    <section style="margin-top:24px">
      <h2>Start Now requests</h2>
      <p class="meta"><%= startnow.length %> entries</p>
      <table>
        <thead><tr><th>Name</th><th>Contact</th><th>Message</th><th>Created</th></tr></thead>
        <tbody>
        <% startnow.forEach(s=>{ %>
          <tr>
            <td><%= s.name || '-' %></td>
            <td><%= s.contact || '-' %></td>
            <td><%= s.message || '-' %></td>
            <td><%= s.createdAt || '-' %></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </section>

  </div>
</body>
</html>
